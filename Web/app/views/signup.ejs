<!DOCTYPE html>
<html lang="en">
<head>
  <% include ./parts/head.ejs %>
</head>
<body>
  <% include ./parts/header.ejs %>

  <main>
    <div class="login-box">
      <br>
      <div class ="hh">
         <h2><b>Sign Up</b></h2>
         </div>
         <br>
        
      <form class="signup-form" action="/user/api/v1/signup" method="post">
        <p id="error1"></p>
        <div class="form-group">
          <p class="kk">Username:</p>
          <input id="uname" class="form-control" type="text" name="username" placeholder="Username" autofocus autocomplete="off" required/>
          <span id="ik" class="glyphicon glyphicon-ok"></span>
          <span id="ir" class="glyphicon glyphicon-remove"></span>
        </div>
        <div class="form-group">
          <p class="kk">Email:</p>
          <input id="email" class="form-control" type="email" name="email" placeholder="Email" autocomplete="off" required/>
          <span id="ik1" class="glyphicon glyphicon-ok"></span>
          <span id="ir1" class="glyphicon glyphicon-remove"></span>
        </div>
        <div class="form-group">
          <p class="kk">Password:</p>
          <input id="pass" class="form-control" type="password" name="password" placeholder="Password" required/>
          <span id="ik2" class="glyphicon glyphicon-ok"></span>
          <span id="ir2" class="glyphicon glyphicon-remove"></span>
        </div><br>
        <button class="btn btn-light btn-lg" type="submit" name="submit">Signup</button><br>
        <br>
        <p><b>Have an account?</b> </p>
        <div>
        <button  class="btn btn-light btn-lg mt-2"><a href="/user/login"><b>Log In Here</b></a></button><br>
          </div>
          <br><br>
      </form>
    </div>
  </main>

  <% include ./parts/footer.ejs %>

  <script src="/js/scriptForSignup.js"></script>
</body>
</html>
